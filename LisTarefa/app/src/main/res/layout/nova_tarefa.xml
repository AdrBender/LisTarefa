<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:gravity="center">
    tools:context=".NovaTarefa">

	<EditText
		android:id="@+id/edt_tarefa"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:hint="Tarefa..."/>

	<Button
		android:id="@+id/horaButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="hora"
		android:onClick="showHoraPicker"
		android:layout_below="@+id/edt_tarefa"
		android:layout_alignParentRight="true"
		android:layout_marginTop="25dp"/>

	<TextView
		android:id="@+id/tv_hora"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/edt_tarefa"
		android:layout_marginTop="40dp"
		android:layout_centerInParent="true"/>

	<Button
		android:id="@+id/dataButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="data"
		android:onClick="showDataPicker"
		android:layout_below="@+id/horaButton"
		android:layout_alignParentRight="true"
		android:layout_marginTop="25dp"/>

	<TextView
		android:id="@+id/tv_data"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_hora"
		android:layout_marginTop="55dp"
		android:layout_centerInParent="true"/>
<!--
	<Button
		android:id="@+id/insertButton"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="salvar"
		android:onClick="showDataPicker"
		android:layout_below="@+id/dataButton"/>
	-->
	<android.support.design.widget.FloatingActionButton
		android:id="@+id/fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/baseline_done_black_18dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"/>

</RelativeLayout>

